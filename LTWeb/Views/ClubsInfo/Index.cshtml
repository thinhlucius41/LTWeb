@model IEnumerable<Model.EF.CLB>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

 <!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="img/breadcrumb-bg.jpg" style="background-image: url('../../Content/Website/img/breadcrumb-bg.jpg');">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="bs-text">
                    <h2>Clubs</h2>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Clubs Section Begin -->
<div class="container-fluid">
    <div class="row">
        @foreach (var i in Model)
        {
            <div class="col-xl-2 col-md-4 mb-4">
                <div class="card border-left-primary shadow h-100 py-2">
                    <div class="card-body" >
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="h5 mb-0 font-weight-bold text-gray-800">
                                   @Html.ActionLink(@i.TenClb, "Details", new { id = @i.IDclb })
                                </div>
                                <img src="@i.Logo" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }       
    </div>
</div>
<!-- Clubs Section End -->
