                                        <dd>
                                            @Html.DisplayFor(model => model.TK)
                                        </dd>

                                        <dt>
                                            @Html.DisplayNameFor(model => model.mail)
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.mail)
                                        </dd>

                                        <dt>
                                            @Html.DisplayNameFor(model => model.sdt)
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.sdt)
                                        </dd>

                                        <dt>
                                            @Html.DisplayNameFor(model => model.dateBegin)
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.dateBegin)
                                        </dd>

                                    </dl>
                                </div>
                                <p>
                                    @Html.ActionLink("Cập nhật", "Update", new { id = Model.IDuser }) |
