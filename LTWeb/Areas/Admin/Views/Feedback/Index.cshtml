@model PagedList.IPagedList<Model.EF.LienHe>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Phản hồi";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@section header{
    Danh sách phản hồi
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
              
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Tên</th>
                                <th>Nội dung</th>
                                <th>Trạng thái</th>
                                <th>#</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr id=" row_@item.ID_Contract">
                                    <td>@item.ID_Contract</td>
                                    <td>@item.Ten</td>
                                    <td>@item.NoiDung</td>
                                    <td><a class="btn-active" data-id="@item.ID_Contract">@Html.Raw(item.hide ? "<strong>Kích hoạt</strong>" : "Khoá")</a></td>
                                    <td>
                                        <a href="~/Admin/Feedback/ViewDetail/@item.ID_Contract">Xem</a>
                                        @*@Ajax.ActionLink("Xóa", "Delete", new { @id = item.Id }, new AjaxOptions
                                   {
                                       Confirm = "Bạn có chắc xóa user này không ?",
                                       OnComplete = "$('#row_" + @item.Id + "').Remove()",
                                       HttpMethod = "Delete"
                                   })*@
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page })) @*//Phân trang Table*@
                </div>
            </div>
        </div>
    </div>
</div>